<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대상자와의 친밀도"
                android:textSize="20sp"
                android:layout_gravity="center"/>
            <RadioGroup
                android:id="@+id/rg_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문항"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 나는 대상자를 안다."
                    android:paddingTop="20dp" />
                <RadioButton
                    android:id="@+id/rb_a_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />
                <RadioButton
                    android:id="@+id/rb_a_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니오" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_b_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문항"
                android:gravity="left"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-1. 나는 대상자와 1:1로 만나는 것이 언제든 가능하다."
                    android:paddingTop="20dp" />
                <RadioButton
                    android:id="@+id/rb_b_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />
                <RadioButton
                    android:id="@+id/rb_b_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니오" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_b_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문항"
                android:gravity="left"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-2. 우리 가족은 친척간의 평판을 조금이라도 의식한다."
                    android:paddingTop="20dp" />
                <RadioButton
                    android:id="@+id/rb_b_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />
                <RadioButton
                    android:id="@+id/rb_b_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니오" />
            </RadioGroup>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음"
                android:layout_gravity="center"
                android:onClick="onClick"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>